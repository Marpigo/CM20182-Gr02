<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BebidasActivity">


    <ImageView
        android:id="@+id/imgBebida"
        android:layout_width="105dp"
        android:layout_height="112dp"
        android:onClick="onClick"
        android:layout_gravity="center"
        android:src="@drawable/bebidas" />

    <EditText
        android:id="@+id/ediNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/stxtNombre" />

    <EditText
        android:id="@+id/ediPrecio"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/sPrecio"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ediIngredientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/sIngredientes" />

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:onClick="onClick"
        android:text="@string/sRegistrar"
        android:textColor="#ffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/labenombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/stxtNombre" />

        <TextView
            android:id="@+id/txtnombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="-20dp" />

        <TextView
            android:id="@+id/txtprecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/labeprecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:paddingTop="0dp"
            android:text="@string/sPrecio" />

        <TextView
            android:id="@+id/txtIngredientes"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/labeingredientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:text="@string/sIngredientes" />

    </LinearLayout>

</LinearLayout>