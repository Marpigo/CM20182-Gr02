<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConfigurationFragment">

    <!-- TODO: Update blank fragment layout -->

    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/s_edit_profile" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/s_keep_session" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/s_notification" />

    <CheckBox
        android:id="@+id/cheAuthorization_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/s_authorization_notification" />

    <CheckBox
        android:id="@+id/cheSound_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/s_sound_notification" />

</LinearLayout>